[ui]
username = Fabien Bousquet <mail@fabien-bousquet.com>
verbose = True

[extensions]
color=
rebase=
purge=
record=
strip=
pager=
hgext.extdiff =
histedit=

[pager]
pager= LESS="FRX" less
attend = d, diff, xdiff, log, help, status

[diff]
git=1
nodates=1

[extdiff]
cmd.diff = /usr/local/bin/ksdiff
opts.diff = --changeset --wait --filelist

[ui]
merge = Kaleidoscope

[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other


[alias]
dpr = diff -r $1 .
dprs = diff -r . .
log=log -G
