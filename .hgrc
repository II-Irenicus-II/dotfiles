[ui]
username = Fabien BOUSQUET <fabien.bousquet@business-cloud.fr>
verbose = True

[extensions]
hgext.extdiff =

[extdiff]
cmd.diff = /usr/local/bin/ksdiff
opts.diff = --changeset --wait --filelist

[ui]
merge = Kaleidoscope

[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other


[alias]
dpr = diff -r $1 .
dprs = diff -r . .
